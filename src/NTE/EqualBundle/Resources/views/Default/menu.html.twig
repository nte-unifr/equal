{# src/NTE/EqualBundle/Resources/views/Default/menu.html.twig #}

{# called by generateMenuAction($top) #}

{% if mTop == false %}

    <ul class="unstyled">
        {% for mItem in mItems %}
            {% if mItem.parent == null %}
            <li><img src="{{ asset('bundles/nteequal/images/arrow.gif') }}" border="0" /> <a href="{{ path('equal_page_slug', {'slug': mItem.slug }) }}">{% if mItem.titleMenuLeft != null %}{{ mItem.titleMenuLeft }}{% else %}{{ mItem.title }}{% endif%}</a></li>
            {% set children = mItem.children %}
            <ul class="unstyled2">
                {% for child in children %}
                {% if mItem.id != child.id %}
                        <li><a href="{{ path('equal_page_slug', {'slug': child.slug }) }}">{% if child.titleMenuLeft != null %}{{ child.titleMenuLeft }}{% else %}{{ child.title }}{% endif%}</a></li>
                {% endif %}
                {% endfor %}
            </ul>
            {% endif %}
        {% endfor %}
    </ul>

{% else %}

    <ul class="nav">
        {% for mItem in mItems %}
            {% if mItem.parent == null and mItem.top == true %}
            <li><a href="{{ path('equal_page_slug', {'slug': mItem.slug }) }}">{% if mItem.titleMenuTop != null %}{{ mItem.titleMenuTop }}{% else %}{{ mItem.title }}{% endif%}</a></li>
            {% endif %}
        {% endfor %}
    </ul>

{% endif %}
