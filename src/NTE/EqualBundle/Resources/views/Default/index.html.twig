{# src/NTE/EqualBundle/Resources/views/Default/index.html.twig #}
<!DOCTYPE html>
<html>
    <head>
    <title>{% block equal_title %}{% endblock %}</title>
    <link rel="shortcut icon" href="{{ asset('bundles/nteequal/images/favicon.ico') }}" type="image/x-icon" />
    <meta name="keywords" lang="fr" content="universit&eacute;, formation, suisse, fribourg, recherche, &eacute;tudes" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/nteequal/css/bootstrap.min.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/nteequal/css/bootstrap-responsive.min.css') }}" type="text/css" media="all" />

        <link href="{{ asset('bundles/nteequal/css/unifr.101.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('bundles/nteequal/css/common.101.css') }}" rel="stylesheet" type="text/css" media="all" />

        <link rel="stylesheet" href="{{ asset('bundles/nteequal/css/style.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/nteequal/css/index.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/nteequal/css/index-print.css') }}" type="text/css" media="print" />
    {% endblock %}

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('bundles/nteequal/js/jquery-1.8.3.min.js') }}"></script>
   
        <script src="{{ asset('bundles/nteequal/js/bootstrap.min.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/nteequal/js/popup.js') }}" type="text/javascript"></script>
    {% endblock %}
    </head>

    <body>
            <!-- start:webpage -->
            <div id="webpage2" class="container-m main">
                <!-- start:identite -->
                <div id="identity" class="visible-desktop">
                    <div id="address">
                        <div class="txt">
                            <a href="{{ path('equal_home') }}">Equal +</a>
                        </div>
                    </div>
                    <div id="bandeau">
                        <a href="{{ path('equal_home') }}"><img alt="Université de Fribourg | Universität Freiburg" src="{{ asset('bundles/nteequal/images/bandeau_unifr_universite.jpg') }}" /></a>
                    </div>
                </div>
                <div class="identity hidden-desktop" style="background: url({{ asset('bundles/nteequal/images/bandeau_unifr_universite.jpg') }}); height: 77px; background-repeat: no-repeat;">
                </div>
                <!-- end:identite -->

                <!-- start:navig -->
                <div id="navigBarre" class="visible-desktop">

                    <div id="nbLeft">
                        <ul class="lang-menu">
                            <li><a href="{{ path('equal_page_slug', {'_locale': 'fr'}) }}">FR</a></li>
                            <li><a href="{{ path('equal_page_slug', {'_locale': 'de'}) }}">DE</a></li>
                        </ul>
                    </div>

                    <div id="nbRight">
                        {% block equal_menu_top %}
                            {{ render(controller('NTEEqualBundle:Default:generateMenu', { 'top': true })) }}
                        {% endblock %}
                    </div>

                </div>
                <!-- end:navig -->

                <!-- start:navig 2 -->
                <div class="navbar hidden-desktop">
                    <div class="navbar-inner">
                        <div class="container">
                         
                            <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            </a>
                             
                            <!-- Be sure to leave the brand out there if you want it shown -->
                                <a class="brand" href="{{ path('equal_home') }}">{{ 'projet_title'|trans }}</a>
                             
                            <!-- Everything you want hidden at 940px or less, place within here -->
                            <div class="nav-collapse collapse">
                            <!-- .nav, .navbar-search, .navbar-form, etc -->
                                
                                {% block equal_menu_top2 %}
					{{ render(controller('NTEEqualBundle:Default:generateMenuResp', { 'top': false })) }}
                                {% endblock %}

                                <ul class="nav pull-right">
                                    <li><a href="http://unifr.ch">Unifr</a></li>
                                    <li><a href="http://nte.unifr.ch">Centre NTE</a></li>
                                </ul>
                            </div>
                         
                        </div>
                    </div>
                </div><!-- end:navig 2 -->
            
                <!-- start:row -->
                <div class="row-fluid">
                    <div class="span3 visible-desktop">
                        <!-- start:colonneLeft -->
                            {% block menu_sideblock %}
                                <!-- start:menu-->
								<div id="menu">
								    <!-- box menu2 -->
									<div class="box001">
										<h2>{{ 'menu'|trans }}</h2>
											<div class="box001_content" id="box001_content">
                                                {% block equal_menu_left %}
													{{ render(controller('NTEEqualBundle:Default:generateMenu', { 'top': false })) }}
                                                {% endblock%}
													
											</div>
							   		</div><!-- end:box menu2-->
									<br><br>
									<div class="box001">
										<h2>{{ 'contact'|trans }}</h2>
											<div class="box001_content">
												<div class="illustrationBox" align="center"></div>
												<img src="{{ asset('bundles/nteequal/images/emailButton.png') }}" align="texttop" />&nbsp;<a href="mailto:didactic@unifr.ch">didactic@unifr.ch</a><br>
											</div>		
							   		</div>
    							</div><!-- end:menu-->
                            {% endblock %}
                        <!-- end:colonneLeft -->
                    </div>
                    
                    
                    <div class="span9">
                        <!-- start:colonneRight -->
                        <div id="content2">
                            {% block equal_content %}
                                
                            {% endblock %}
                        </div><!-- end:colonneRight -->
                    </div>
                    
                    <div class="span3 visible-phone">
                        
                    </div>

                </div><!-- end:row -->

                <!-- start:row -->
                <div class="row-fluid">
                    <div class="span9 offset3 visible-desktop">
                        <div id="footer"></div>
                    </div>
                </div><!-- end:row -->

                <!-- start:row -->
                <div class="row-fluid">
                    <div class="span12">
                        <!-- start:signature -->
                        <div id="signature">
                            {{ 'footer_text'|trans|raw }}
                        </div><!-- end:signature -->
                    </div>
                </div><!-- end:row -->
                
                <!-- end:main -->

            </div><!-- end:webpage -->
    </body>
</html>
